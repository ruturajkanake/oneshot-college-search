{
  "name": "oneshot",
  "version": "1.0.0",
  "description": "Assignment task for oneshot",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm start",
    "start": "node server/index.js",
    "lint": "eslint . --ext .js",
    "prettier-format": "prettier --config .prettierrc 'server/**/*.js' --write",
    "dev": "concurrently -n 'server,client' -c 'green,blue' \"env-cmd -f ./config/dev.env nodemon src/index.js\" \"npm run client\"",
    "test": "env-cmd -f ./config/test.env jest --watch --runInBand",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongodb": "^3.6.6",
    "mongoose": "^5.12.5",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  }
}
